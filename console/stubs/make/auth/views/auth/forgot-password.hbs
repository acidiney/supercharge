<div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3 mt-5">

  <p class="text-center mb-5">
    <a href="/">
      <img src="/images/logo-text.png" class="img-fluid w-50" alt="{{title}}">
    </a>
  </p>

  <div class="card card-bt-blue">
    <div class="card-body">

      <h1 class="h4 text-center mt-3 mb-4">
        Reset your password
      </h1>

      {{#unless successmessage}}
        <p class="lead text-md mb-5">
          Please use the form below to provide your email address. Youâ€™ll receive you an email with a link to reset your password.
        </p>

        {{#if errormessage}}
          <div class="alert alert-danger">
            {{errormessage}}
          </div>
        {{/if}}

        <form method="POST" class="mb-3">
          {{csrf}}

          <div class="form-group">

            <label class="label {{#if errors.email}}text-danger{{/if}}" for="email">
              {{#if errors.email}} {{errors.email}} {{else}}Email address{{/if}}
            </label>
            <input class="form-control {{#if errors.email}}is-invalid{{/if}}" type="text" placeholder="Your email address" id="email"
              name="email" value="{{email}}" autofocus>

          </div>

          <button class="btn btn-primary btn-block mt-4" type="submit">Get password reset instructions</button>

        </form>

        {{else}}
          <div class="alert alert-success">
            {{successmessage}}
          </div>
      {{/unless}}

    </div>
  </div>
</div>
